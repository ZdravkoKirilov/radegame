{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "es2020",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "types": ["pixi.js"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/core": ["app/core/index"],
      "@app/shared": ["app/shared/index"],
      "@app/animations": ["app/animations/index"],
      "@app/dynamic-forms": ["app/dynamic-forms/index"],
      "@app/game-editor": ["app/game-editor/index"],
      "@app/game-mechanics": ["app/game-mechanics/index"],
      "@app/game-arena": ["app/game-arena/index"],
      "@app/profile": ["app/profile/index"],
      "@app/rendering": ["app/rendering/index"],
      "@app/render-kit": ["app/render-kit/index"],
      "@app/engines/pixi": ["app/engines/pixijs/index"],
    }
  }
}
